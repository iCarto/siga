<assembly>
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
	<!-- Extructure for the extension -->
		<fileSet>
			<directory>config</directory>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>data</directory>
			<outputDirectory>${extension-distribution}/data
			</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>images</directory>
			<outputDirectory>/${extension-distribution}/images
			</outputDirectory>
		</fileSet>
	<!-- Extructure for the native libraries -->
<!--	<fileSet>-->
<!--      <directory>${basedir}/../binaries/linux/3D/</directory>-->
<!--	  <outputDirectory>/linux/lib</outputDirectory>-->
<!--    </fileSet>-->
	</fileSets>
	<files>
		<file>
			<source>build.number</source>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</file>
	</files>
	<!--
		***********************************************************************
	-->
  <!-- *													   *-->
	<!--
		***********************************************************************
	-->
	<dependencySets>
		<dependencySet>
			<outputDirectory>${extension-distribution}/${library-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:extCAD</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${gvsig-extension-distribution}/lib
			</outputDirectory>
			<includes>
				<include>org.gvsig.legacy:gt2-postgis</include>
				<include>org.gvsig.legacy:gt2-shapefile</include>
				<include>org.gvsig.legacy:jdom</include>
				<include>org.gvsig.legacy:smc</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>