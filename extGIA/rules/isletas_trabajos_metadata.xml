<?xml version="1.0" encoding="UTF-8"?>
<LAYER alias="isletas_trabajos">

	<FIELD>
		<FIELDNAME>fecha</FIELDNAME>
		<VALIDATIONRULE>DATE</VALIDATIONRULE>
	</FIELD>

	<FIELD>
		<FIELDNAME>unidad</FIELDNAME>
		<DOMAINREADER>
			<DRTYPE>db</DRTYPE>
			<DRDBSCHEMA>audasa_extgia_dominios</DRDBSCHEMA>
			<DRDBTABLE>unidad_isletas</DRDBTABLE>
			<DRDBCOLUMNALIAS>item</DRDBCOLUMNALIAS>
			<DRDBCOLUMNVALUE>item</DRDBCOLUMNVALUE>
		</DOMAINREADER>
	</FIELD>

	<FIELD>
		<FIELDNAME>longitud</FIELDNAME>
		<VALIDATIONRULE>double_positive</VALIDATIONRULE>
		<ENABLEIF>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Herbicida</VALUE>
			</CONDITION>
		</ENABLEIF>
	</FIELD>

	<FIELD>
		<FIELDNAME>ancho</FIELDNAME>
		<VALIDATIONRULE>DOUBLE_POSITIVE</VALIDATIONRULE>
		<ENABLEIF>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Herbicida</VALUE>
			</CONDITION>
		</ENABLEIF>
	</FIELD>

	<FIELD>
		<FIELDNAME>medicion</FIELDNAME>
		<VALIDATIONRULE>double_positive</VALIDATIONRULE>
				<ENABLEIF>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Desbroce con retroaraña</VALUE>
			</CONDITION>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Desbroce mecánico</VALUE>
			</CONDITION>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Eliminación veg. mediana de HG y transp. a vertedero</VALUE>
			</CONDITION>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Siega mecánica de isletas</VALUE>
			</CONDITION>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Siega mecánica de medianas</VALUE>
			</CONDITION>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Siega mecánica de medianas &lt; 1,5 m</VALUE>
			</CONDITION>
			<CONDITION>
			<COMPONENT>unidad</COMPONENT>
			<VALUE>Tala y desbroce manual</VALUE>
			</CONDITION>
		</ENABLEIF>
	</FIELD>
	
	<FIELD>
		<FIELDNAME>medicion_elemento</FIELDNAME>
		<VALIDATIONRULE>integer_positive</VALIDATIONRULE>
	</FIELD>
	
	<FIELD>
		<FIELDNAME>medicion_ultimo_trabajo</FIELDNAME>
		<VALIDATIONRULE>double_positive</VALIDATIONRULE>
	</FIELD>

</LAYER>
